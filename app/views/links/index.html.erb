<%= link_to 'Sign Out', user_path(current_user.id), method: :DELETE  %>
<br>
<br>
<%= form_for @link do |f| %>
  <%= f.text_field :title, placeholder: 'Title' %>
  <%= f.text_field :url, placeholder: 'Url' %>
  <%= f.submit 'Create Link' %>
<% end %>

<div class='links'>
  <% @links.each do |link| %>
    <h3><%= link.title %></h3>
    <ul>
      <li><button><%= link.status_output %></button></li>
      <li><%= link.url %></li>
    </ul>
  <% end %>
</div>
