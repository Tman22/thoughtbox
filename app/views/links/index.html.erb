<%= link_to 'Sign Out', user_path(current_user.id), method: :DELETE  %>
<br>
<br>
<%= form_for @link do |f| %>
  <%= f.text_field :title, placeholder: 'Title' %>
  <%= f.text_field :url, placeholder: 'Url' %>
  <%= f.submit 'Create Link' %>
<% end %>

<div class='links'>
  <% @links.each do |link| %>
    <div id="<%= link.id %>">
      <h3><%= link.title %></h3>
      <ul>
        <li class="<%= link.status_output %>">
          <a href='<%= link.url %>'><%= link.url %></a> -
          <button>Mark as <%= link.status_output %></button>
        </li>
        <li><a href='/links/<%= link.id %>/edit'>Edit</a></li>
      </ul>
    </div>
  <% end %>
</div>
